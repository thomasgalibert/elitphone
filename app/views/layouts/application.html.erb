<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? "#{yield(:title)} - ELITEPHONE" : "ELITEPHONE - Calendrier" %></title>
  <%= favicon_link_tag 'favicon.ico' %>
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://use.typekit.net/qcv8kcu.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <%= render "includes/navbar" %>
  </header>

  <%= render "includes/flashes" %>

  <div class="wrapper">

    <section class="main-content" id="week">
      <%= yield %>
    </section>

    <section class="offcanvas" id="offcanvas">
      <%= render 'includes/offcanvas' %>
    </section>

  </div>

  <footer>
    <%= render 'includes/footer' %>
  </footer>

</body>
</html>
