<nav class="topbar">
  <ul class="nav-left">
    <li>
      <%= link_to login_path, class: "icon-link-logo" do %>
        <%= fa_stacked_icon "hand-spock-o inverse", base: "circle", class: "fa-2x black icon-nav" %>
      <% end %>
    </li>
    <li><%= link_to "Elitephone", '#' %></li>
  </ul>

  <ul class="nav-middle">
    <li><%= link_to "Agendas", '#' %></li>
    <li><%= link_to "Clients", '#', class: "active" %></li>
    <li><%= link_to "Patients", '#' %></li>
    <li>
      <%= form_tag '#' do %>
        <%= autocomplete_field_tag :event_name,
            '', autocomplete_event_name_events_path,
            :size => 75,
            data: {"autocomplete-label" => "..., rien du tout"},
            placeholder: "rechercher client" %>
      <% end %>
    </li>
  </ul>

  <ul class="nav-right">
    <li><a href="#">
      <%= fa_icon "clock-o" %>
      <span id="timer"></span>
    </a></li>
    <li>
      <%= link_to '#', class: "icon-link" do %>
        <div class="notification-stack">
          <%= fa_stacked_icon "bell inverse", base: "circle", class: "fa-2x success icon-nav bell" %>
          <%= content_tag :span, "3", class: "number-bell" %>
        </div>
      <% end %>
    </li>
    <li>
      <%= link_to '#', class: "icon-link" do %>
        <%= fa_stacked_icon "envelope inverse", base: "circle", class: "fa-2x success icon-nav" %>
      <% end %>
    </li>
    <li>
      <% if current_user %>
        <%= link_to logout_path, class: "icon-link" do %>
          <%= fa_stacked_icon "sign-out inverse", base: "circle", class: "fa-2x primary icon-nav" %>
        <% end %>
      <% else %>
        <%= link_to login_path, class: "icon-link" do %>
          <%= fa_stacked_icon "lock inverse", base: "circle", class: "fa-2x primary icon-nav" %>
        <% end %>
      <% end %>
    </li>
  </ul>
</nav>
