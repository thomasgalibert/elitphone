<% if view_action == "day" %>
  <%= render partial: 'nav_calendar_day', locals: {agenda: agenda} %>
<% elsif view_action == "week" %>
  <%= render partial: 'nav_calendar', locals: {agenda: agenda} %>
<% end %>

<div class="week">
  <%= calendar date_ref,
      agenda.step,
      events,
      agenda.start_hour,
      agenda.end_hour,
      agenda,
      view_action %>
</div>
